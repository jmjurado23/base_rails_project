%head
  %title=t "title.#{params[:action]}"
  %meta{ :name => "description", :content => t( "meta.description.#{params[:action]}" ) }
  %meta{ :name => "keywords", :content => t( "meta.subject" ) }
  %meta{ :name => "robots", :content => "Index, Follow" }
  %meta{ :name => "author", :content => "jmjurado23" }
  %meta{ :name => "language", :content => "Spanish" }
  %meta{:content => "width=device-width", :name => "viewport"}
  %meta{:charset => "utf-8"}
  %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
  %body
    .intro-header
      .container
        .col
          .col-lg-8
            %h1
              =t 'wanab.home.title'
            %h3
              =t 'wanab.home.subtitle'
        .col
          .col-lg-4
            .row
              %h2
                =t 'wanab.registration.sign_in_title'
            .row
              = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
                %div
                  = f.email_field :email, :autofocus => true, class: 'form-control',
                    placeholder: I18n.t( 'wanab.registration.placeholder_email' )
                %br/
                %div
                  = f.password_field :password, class: 'form-control',
                    placeholder: I18n.t( 'wanab.registration.placeholder_password' )
                %br/
                - if devise_mapping.rememberable?
                  %div
                    = f.check_box :remember_me
                    =t 'wanab.registration.remember_me'
                    %button.btn.btn-primary.pull-right
                      =t 'wanab.registration.sign_in'
                    %button.btn.btn-primary.pull-right
                      =t 'wanab.registration.register'
            .row
              %br/
              = render "devise/shared/links"

  .content-section-a
    .container
      .row
        .col-lg-5.col-sm-6
          %hr.section-header-spacer
          .clearfix
          %h2
            = 'Sección 1'
          %p.lead
            = 'Prueba de texto de sección'
        .col-lg-5.col-lg-offset-2.col-sm-6
          %img.img-responsive{ src: asset_path( 'journey.jpg' ) }
